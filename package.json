{
  "name": "webpack-config",
  "version": "0.0.0",
  "description": "Shareable webpack configuration",
  "main": "src/index.js",
  "dependencies": {},
  "devDependencies": {
    "conventional-changelog-cli": "^2.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint-config-prettier": "^2.9.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.0",
    "xo": "^0.22.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cz": "npx git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "lint": "xo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebacruz/webpack-config.git"
  },
  "keywords": [
    "webpack",
    "configuration"
  ],
  "author": "Sebastian Cruz <sebacruzcode@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sebacruz/webpack-config/issues"
  },
  "homepage": "https://github.com/sebacruz/webpack-config#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "xo": {
    "extends": "prettier"
  },
  "lint-staged": {
    "*.{js,json}": [
      "npm run lint",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
