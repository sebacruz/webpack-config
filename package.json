{
  "name": "@sebacruz/webpack-config",
  "version": "1.1.2",
  "description": "Shareable webpack configuration",
  "main": "src/index.js",
  "directories": {
    "lib": "./src"
  },
  "dependencies": {
    "@babel/core": "^7.1.5",
    "@babel/preset-env": "^7.1.5",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.1",
    "cssnano": "^4.1.7",
    "cssnano-preset-default": "^4.0.5",
    "file-loader": "^2.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-webp-webpack-plugin": "^1.0.2",
    "imagemin-webpack-plugin": "^2.3.0",
    "lodash": "^4.17.11",
    "mini-css-extract-plugin": "0.4.2",
    "node-sass": "^4.10.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^5.3.0",
    "resolve-url-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-merge": "^4.1.4",
    "webpack-module-hot-accept": "^1.0.5"
  },
  "devDependencies": {
    "conventional-changelog-cli": "^2.0.11",
    "cz-conventional-changelog": "^2.1.0",
    "eslint-config-prettier": "^2.9.0",
    "husky": "^1.1.3",
    "lint-staged": "^7.3.0",
    "prettier": "^1.15.2",
    "xo": "^0.22.0"
  },
  "peerDependencies": {
    "babel-loader": "^8.0.4",
    "css-loader": "^1.0.0",
    "file-loader": "^2.0.0",
    "postcss-loader": "^3.0.0",
    "resolve-url-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack-module-hot-accept": "^1.0.5"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cz": "npx git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "lint": "xo",
    "build": "webpack",
    "prettier": "prettier --write *.{js,json} src/**/*.{js,json}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebacruz/webpack-config.git"
  },
  "keywords": [
    "webpack",
    "configuration",
    "node",
    "javascript",
    "webdev",
    "frontend",
    "css",
    "sass",
    "es6",
    "webpack-dev-server"
  ],
  "author": "Sebastian Cruz <sebacruzcode@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sebacruz/webpack-config/issues"
  },
  "homepage": "https://github.com/sebacruz/webpack-config#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "xo": {
    "extends": "prettier"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "linters": {
      "*.{js,json}": [
        "xo",
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "example/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
